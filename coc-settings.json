{
    "coc.preferences.colorSupport": true,
    "coc.preferences.extensionUpdateCheck": "daily",
    //, "java", "scala", "c", "h", "hh", "hpp", "cc", "cu", "cpp", json
    "coc.preferences.formatOnSaveFiletypes": ["javascript", "python"],
    "coc.preferences.highlightTimeout": 1000,
    "coc.preferences.rootPatterns": [".git", ".vim", ".projections.json", ".project", "build.sbt", "build.sc", "build.grade", "pom.xml"],
    "coc.preferences.formatOnType": true,
    "cursors.cancelKey": "<BackSpace>",

    "diagnostic.displayByAle": false,
    "diagnostic.errorSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.maxWindowHeight": 10,
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.warningSign": "",

    "tabnine.shortcut": "TN",
    "tabnine.triggers": [],
    "tabnine.priority": 100,
    "tabnine.binary_path": "",
    "tabnine.disable_filetypes": ["javascript", "python", "java", "json", "scala", "c", "h", "hh", "hpp", "cc", "cu", "cpp"],
    "tabnine.disable_file_regex": [],
    "tabnine.disable_line_regex": [],

    "explorer.buffer.showHiddenBuffers": true,
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.enableNerdfont": true,

    "git.addGBlameToBufferVar": true,
    "git.addGBlameToVirtualText": true,
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.addedSign.text": "▎",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "git.changeRemovedSign.text": "▋",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.changedSign.text": "▎",
    "git.enableGutters": true,
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.removedSign.text": "▏",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.text": "▔",
    "git.virtualTextPrefix": "  ··· ",

    "list.insertMappings": {
        "<C-t>": "action:tabe",
        "<C-w>": "command:wincmd k",
        "<c-s>": "action:split",
        "<c-v>": "action:vsplit"
    },
    "list.height": 10,
    "list.maxPreviewHeight": 6,
    "list.source.grep.defaultOptions": ["--strict", "--no-sort"],
    "list.source.grep.defaultArgs": [ "-e"],
    "list.source.lines.defaultArgs": ["-e"],
    "list.source.words.defaultArgs": ["-e"],
    "list.source.searchhistory.defaultOptions": [
        "--number-select", "--regex", "--ignore-case"],
    "list.source.cmdhistory.defaultOptions": [
        "--number-select", "--regex", "--ignore-case", "--no-sort"],

    "prettier.tabWidth": 4,
    "prettier.printWidth": 200,

    // coc-pyright
    "python.linting.pylintEnabled": false,
    "python.linting.pytypeEnabled": false,
    "python.pythonPath": "python3",
    // pip3 install --upgrade autopep8
    "python.formatting.autopep8Path": "autopep8",
    "python.formatting.autopep8Args": ["--max-line-length", "120", "--experimental"],
    "python.analysis.autoSearchPaths": true,
    "diagnostic.showUnused": false,

    "session.directory": "~/.cache/coc/sessions",
    "session.saveOnVimLeave": true,

    "signature.target": "float",

    "snippets.extends": {
        "snippets.extends.cpp": ["c"],
        "snippets.extends.typescript": ["javascript"]
    },
    "snippets.shortcut": "  Ⓢ",
    "snippets.ultisnips.enable": true,

    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.detailField": "abbr",
    "suggest.floatEnable": true,
    "suggest.minTriggerInputLength": 1,
    "suggest.noselect": true,
    "suggest.numberSelect": false,
    "suggest.timeout": 5000,
    "suggest.triggerAfterInsertEnter": true,
    "suggest.triggerCompletionWait": 50,

    "metals.enable": true,
    // "xml.java.home": "/Library/Java/JavaVirtualMachines/jdk1.8.0_144.jdk/Contents/Home/",
    // "metals.javaHome": "/Library/Java/JavaVirtualMachines/jdk1.8.0_144.jdk/Contents/Home",
    "metals.mavenScript": "mvn ch.epfl.scala:maven-bloop_2.10:<bloop_version>:bloopInstall",

    "yank.enableCompletion": false,
    "yank.highlight.duration": 200,

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cc", "h", "hh", "hpp", "cuda", "objc", "objcpp"],
            "rootPatterns": [".ccls-root", ".clang", ".ccls", ".vim/", ".git/", ".hg/", ".clang_complete", "compile_commands.json", "compile_flags.txt"],
            "initializationOptions": {
                "cache": { "directory": "/tmp/ccls-cache" },
                "client": { "snippetSupport": true }
            }
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true
            }
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "efm": {
            "command": "efm-langserver", // markdown language-server
            "filetypes": ["vim", "eruby", "markdown"]
        },
        "sql": {
            "command": "sql-language-server",
            "args": ["up", "--method", "stdio"],
            "filetypes": ["sql", "mysql"]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": ["build/"],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": ["lua"]
        },
        "intelephense": {
           "command": "intelephense",
           "args": ["--stdio"],
           "filetypes": ["php"],
           "initializationOptions": {
             "storagePath": "/tmp/intelephense"
           }
        },
        "phplang": {
            "command": "php",
            "args": ["/path/to/vendor/felixfbecker/language-server/bin/php-language-server.php"],
            "filetypes": ["php"]
         }
    },
    "snippets.ultisnips.pythonPrompt": false
}
